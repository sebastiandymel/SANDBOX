<UserControl x:Class="UIFramework.Modules.Modules.HostingFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:regions="http://www.codeplex.com/CompositeWPF"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <Border Background="GhostWhite" Margin="20" CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5"></DropShadowEffect>
        </Border.Effect>
        <ContentControl x:Name="FrameContent" />
    </Border>
</UserControl>
